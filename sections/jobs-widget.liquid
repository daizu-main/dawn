<div class="jw-SectionGrid color-{{ section.settings.color_scheme }}">
  <div class="jw-SectionGrid-Narrow">
    <div id="{{ section.settings.id | escape }}">
      <script type="text/javascript" defer src="{{ section.settings.scriptUrl | escape }}"></script>
    </div>
  </div>
</div>

{% style %}
.jw-SectionGrid {
  display: block;
  grid-template-columns: 1fr minmax(25px,200px) minmax(600px,900px) minmax(25px,200px) 1fr;
}

.jw-SectionGrid-Narrow {
  grid-column: 3 / span 1;
}

@media screen and (min-width: 990px) {
  .jw-SectionGrid {
    display: grid;
  }
}
{% endstyle %}


{% schema %}
{
  "name": "Jobs-Widget",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "id",
      "label": "ID des Containerelements",
      "default": "join-widget"
    },
    {
      "type": "text",
      "id": "scriptUrl",
      "label": "URL des zu ladenden Skripts",
      "default": "https://join.com/api/widget/bundle/eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..6SHYYO695ArRzGCDxUo6HuDrcm6RD7IwA8qyBfm1uDI"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background-1",
          "label": "t:sections.footer.settings.color_scheme.options__3.label"
