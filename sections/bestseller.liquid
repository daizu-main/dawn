{% schema %}
{
  "name": "Bestseller",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Unsere Bestseller",
      "label": "Überschrift des Abschnitts"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": true,
      "label": "t:sections.featured-collection.settings.swipe_on_mobile.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background-1",
          "label": "t:sections.footer.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.footer.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.footer.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.footer.settings.color_scheme.label"
    },
    {
      "type": "color",
      "id": "backgroundProductCards",
      "label": "Hintergrund der Produktkacheln",
      "default": "#F9F9FA"
    },
    {
      "type": "text",
      "id": "linkProductPage",
      "label": "Beschriftung des Buttons zur Produktseite",
      "default": "Mehr erfahren"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "featured_product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Produkt"
        },
        {
          "type": "text",
          "id": "variant",
          "label": "SKU der Produktvariante"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Bild (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bestseller",
      "settings": {
        "title": "Unsere Bestseller",
        "swipe_on_mobile": true,
        "color_scheme": "background-1",
        "backgroundProductCards": "#F9F9FA"
      },
      "blocks": [
        {
          "type": "product",
          "settings": {
          }
        }
      ]
    }
  ]
}
{% endschema %}
