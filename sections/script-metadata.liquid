<script>
  document.querySelector("title").innerHTML = "{{ section.settings.title | escape }}"
  document.querySelector("meta[name=description]").content = "{{ section.settings.description | escape }}"
</script>

{% schema %}
{
  "name": "t:sections.script-metadata.name",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.script-metadata.settings.title.label"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:sections.script-metadata.settings.description.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.script-metadata.name"
    }
  ]
}
{% endschema %}